@model ST10339549_CLDV6212_POE.Models.Customer

@{
    ViewBag.Title = "Delete Customer";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-danger text-white">
            <h2 class="mb-0">Delete Customer</h2>
        </div>
        <div class="card-body">
            <h4 class="text-center text-danger mb-4">Are you sure you want to delete this customer?</h4>

            <div class="table-responsive">
                <table class="table table-borderless">
                    <tbody>
                        <tr>
                            <th class="w-25">Customer ID:</th>
                            <td>@Model.CustomerId</td>
                        </tr>
                        <tr>
                            <th class="w-25">Customer Name:</th>
                            <td>@Model.CustomerName</td>
                        </tr>
                        <tr>
                            <th>Customer Surname:</th>
                            <td>@Model.CustomerSurname</td>
                        </tr>
                        <tr>
                            <th>Customer Email:</th>
                            <td>@Model.CustomerEmail</td>
                        </tr>
                        <tr>
                            <th>Customer Address:</th>
                            <td>@Model.CustomerAddress</td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <div class="d-flex justify-content-center mt-4">
                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="RowKey" />
                    <button type="submit" class="btn btn-danger me-3">
                        <i class="fas fa-trash-alt"></i> Confirm Delete
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-times"></i> Cancel
                    </a>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/js/all.min.js" crossorigin="anonymous"></script>
}