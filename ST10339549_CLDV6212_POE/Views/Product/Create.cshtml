@model ST10339549_CLDV6212_POE.Models.Product

@{
    ViewBag.Title = "Create New Product";
}

<div class="container">
    <h2>Create New Product</h2>

    <form asp-action="Create" method="post">
        <div class="form-group">
            <label>Product ID</label>
            <input type="text" asp-for="ProductId" class="form-control" required />
        </div>
        <div class="form-group">
            <label>Product Name</label>
            <input type="text" asp-for="ProductName" class="form-control" required />
        </div>
        <div class="form-group">
            <label>Product Description</label>
            <input type="text" asp-for="ProductDescription" class="form-control" required />
        </div>
        <div class="form-group">
            <label>Product Price</label>
            <input type="number" asp-for="ProductPrice" class="form-control" step="0.01" required />
        </div>
        <button type="submit" class="btn btn-primary mt-3">Save</button>
        <a asp-action="Index" class="btn btn-secondary mt-3">Cancel</a>
    </form>
</div>
