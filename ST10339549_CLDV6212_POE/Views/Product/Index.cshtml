@model List<ST10339549_CLDV6212_POE.Models.Product>

@{
    ViewBag.Title = "Product Management";
}

<div class="container">
    <h2 class="my-4 text-center">Product Management</h2>

    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <a asp-action="Create" class="btn btn-success mb-3">
                <i class="fas fa-plus-circle"></i> Create New Product
            </a>

            <table class="table table-hover table-bordered">
                <thead class="table-light">
                    <tr>
                        <th>Product ID</th>
                        <th>Product Name</th>
                        <th>Description</th>
                        <th>Price</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var product in Model)
                    {
                        <tr>
                            <td>@product.ProductId</td>
                            <td>@product.ProductName</td>
                            <td>@product.ProductDescription</td>
                            <td>@product.ProductPrice.ToString("C")</td>
                            <td class="text-center">
                                <a class="btn btn-outline-primary btn-sm me-2" asp-action="Edit" asp-route-partitionKey="@product.PartitionKey" asp-route-rowKey="@product.RowKey" data-bs-toggle="tooltip" data-bs-placement="top" title="Edit Product">
                                    <i class="fas fa-edit"></i> Edit
                                </a>
                                <a class="btn btn-outline-danger btn-sm" asp-action="Delete" asp-route-partitionKey="@product.PartitionKey" asp-route-rowKey="@product.RowKey" data-bs-toggle="tooltip" data-bs-placement="top" title="Delete Product">
                                    <i class="fas fa-trash-alt"></i> Delete
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
